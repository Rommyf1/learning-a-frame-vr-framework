---
interface Props {
  ID: string;
  scale: string;
  position?: string;
  rotation?: string;
}

const { ID, scale, position, rotation } = Astro.props;
---

<!--Silla-->
<a-obj-model
  id={ID}
  src="#silla-obj"
  material="src: #silla-madera; color: gray"
  normal-map="#silla-tela"
  scale={scale}
  position={position ?? "0 0 0"}
  rotation={rotation ?? "0 0 0"}
>
  <!--Pata delantera derecha-->
  <a-box
    id="silla-pata-delantera-derecha"
    width="4"
    depth="3.5"
    height="48"
    material="transparent: true; opacity: 0;"
    position="22 23.5 16.37"
    rotation="0 0 4.6"
    ammo-body="type: static; restitution: 0.7"
    ammo-shape="type: box;"></a-box>

  <!--Pata delantera izquierda-->
  <a-box
    id="silla-pata-delantera-izquierda"
    width="4"
    depth="3.5"
    height="48"
    material="transparent: true; opacity: 0;"
    position="22 23.5 -25.7"
    rotation="0 0 4.6"
    ammo-body="type: static; restitution: 0.7"
    ammo-shape="type: box;"></a-box>

  <!--Pata trasera derecha-->
  <a-box
    id="silla-pata-trasera-derecha"
    width="4"
    depth="3.5"
    height="48"
    material="transparent: true; opacity: 0;"
    position="-22 23.5 16.8"
    rotation="0 0 -4.6"
    ammo-body="type: static; restitution: 0.7"
    ammo-shape="type: box;"></a-box>

  <!--Pata trasera izquierda-->
  <a-box
    id="silla-pata-trasera-izquierda"
    width="4"
    depth="3.5"
    height="48"
    material="transparent: true; opacity: 0;"
    position="-22 23.5 -25"
    rotation="0 0 -4.6"
    ammo-body="type: static; restitution: 0.7"
    ammo-shape="type: box;"></a-box>

  <!--asiento Hozizontal-->
  <a-box
    id="mesita-asiento-horizontal"
    width="46"
    height="46"
    depth="6"
    material="transparent: true; opacity: 0;"
    rotation="90 0 0"
    position="0 47 -4"
    ammo-body="type: static; restitution: 0.7"
    ammo-shape="type: box;"></a-box>

  <!--Espaldar-->
  <a-box
    id="mesa-espaldar"
    width="46"
    height="62"
    depth="6"
    material="transparent: true; opacity: 0;"
    rotation="-10 90 0"
    position="-25 75 -4"
    ammo-body="type: static; restitution: 0.7"
    ammo-shape="type: box;"></a-box>
</a-obj-model>
